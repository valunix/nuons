<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RootNamespace>Nuons.Abstractions</RootNamespace>
		<LangVersion>latest</LangVersion>
		<IsPackable>true</IsPackable>
		<PackageId>Nuons.Abstractions</PackageId>
		<Authors>Nikola Ljubisic</Authors>
		<Title>Nuons Abstractions</Title>
		<PackageIcon>nuons_icon_64x64.png</PackageIcon>
		<PackageProjectUrl>https://github.com/valunix/nuons</PackageProjectUrl>
		<Description>A lightweight open-source library for .NET that cuts down boilerplate and speeds up application development.</Description>
		<RepositoryUrl>https://github.com/valunix/nuons</RepositoryUrl>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageReadmeFile>nuget-package-readme.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Nuons.Core.Abstractions\Nuons.Core.Abstractions.csproj" Pack="true" PrivateAssets="all" />
		<ProjectReference Include="..\Nuons.Http.Abstractions\Nuons.Http.Abstractions.csproj" Pack="true" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\Nuons.Core.Abstractions\bin\Release\netstandard2.0\Nuons.Core.Abstractions.dll"
			  Pack="true" PackagePath="lib/netstandard2.0/" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\Nuons.Http.Abstractions\bin\Release\netstandard2.0\Nuons.Http.Abstractions.dll"
			  Pack="true" PackagePath="lib/netstandard2.0/" />
	</ItemGroup>

	<ItemGroup>
		<None Update="nuons_icon_64x64.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\nuget-package-readme.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
